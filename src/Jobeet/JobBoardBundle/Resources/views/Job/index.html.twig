{% extends 'JobeetJobBoardBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset('bundles/jobeetjobboard/css/jobs.css') }}" />
{% endblock %}

{% block body -%}
    <div id="jobs">
      <table class="jobs">
        {% for job in jobs %}
          <tr class="{{ cycle(['even', 'odd'], loop.index) }}">
            <td class="location">{{ job.location }}</td>
            <td class="position">
              <a href="{{ path('job_show', { 'slug': job.slug }) }}">
                {{ job.position }}
              </a>
            </td>
            <td class="company">{{ job.company }}</td>
          </tr>
        {% endfor %}
      </table>
    </div>
{% endblock %}
